<div class="jumbotron text-center">
  <h1>Eat-Da-Burger!</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col">
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col"></div>
    <div class="col">
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <li>
              {{burger_name}}
            </li> 
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <form class="create-form mx-auto">
      <div class="form-group">
        <input type="text" id="ca" name="name">
      </div>
      <button type="submit">Submit</button>
    </form>
  </div>
</div>
